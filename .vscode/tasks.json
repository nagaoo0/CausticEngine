{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Project Files",
            "type": "shell",
            "command": "vendor/bin/premake/Windows/premake5.exe",
            "args": ["--file=Build-Walnut-ExampleProject.lua", "vs2022"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "Caustic.sln",
                "/p:Configuration=Debug",
                "/p:Platform=x64",
                "/m"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "Generate Project Files"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "Caustic.sln",
                "/p:Configuration=Release",
                "/p:Platform=x64",
                "/m"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "Generate Project Files"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "Caustic.sln",
                "/t:Clean",
                "/p:Configuration=Debug",
                "/p:Platform=x64"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}