
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Project Files",
            "type": "shell",
            "command": "vendor/bin/premake/Windows/premake5.exe",
            "args": ["--file=Build-Walnut-ExampleProject.lua", "vs2022"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Shaders",
            "type": "shell",
            "command": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "args": ["-ExecutionPolicy", "Bypass", "-File", ".\\scripts\\Build-Shaders.ps1", "-BuildConfig", "${input:buildConfig}"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "Caustic.sln",
                "/p:Configuration=Debug",
                "/p:Platform=x64",
                "/m"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": [ "Generate Project Files", "Build Shaders" ]
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "Caustic.sln",
                "/p:Configuration=Release",
                "/p:Platform=x64",
                "/m"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": [ "Generate Project Files", "Build Shaders" ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "Caustic.sln",
                "/t:Clean",
                "/p:Configuration=Debug",
                "/p:Platform=x64"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "buildConfig",
            "type": "pickString",
            "description": "Which build configuration to use when building shaders?",
            "options": ["Debug", "Release"],
            "default": "Debug"
        }
    ]
}